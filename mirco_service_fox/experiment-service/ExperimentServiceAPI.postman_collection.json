        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"新标题\",\n  \"description\": \"新描述\",\n  \"permission\": 1,\n  \"deadline\": \"2025-12-31T23:59:59Z\",\n  \"student_ids\": [\"student1\", \"student2\"],\n  \"questions\": [\n    {\n      \"type\": \"choice\",\n      \"content\": \"题目内容\",\n      \"options\": [\"A\", \"B\", \"C\", \"D\"],\n      \"correct_answer\": \"A\",\n      \"score\": 10\n    }\n  ]\n}"
