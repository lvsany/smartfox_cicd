  "item": [
    {
      "name": "学生-获取实验列表",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/student/experiments?page=1&limit=10&status=all",
          "host": ["{{base_url}}"],
          "path": ["api", "student", "experiments"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"},
            {"key": "status", "value": "all"}
          ]
        }
      }
    },
    {
      "name": "学生-获取实验详情",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/student/experiments/:experiment_id",
          "host": ["{{base_url}}"],
          "path": ["api", "student", "experiments", ":experiment_id"]
        }
      }
    },
